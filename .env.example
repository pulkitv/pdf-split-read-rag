# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true

# Server Configuration
SERVER_NAME=localhost:5000
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

# File Upload Configuration
UPLOAD_FOLDER=uploads
TEMP_FOLDER=temp
PROCESSED_FOLDER=processed
MAX_CONTENT_LENGTH=52428800
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf

# Session Configuration
PERMANENT_SESSION_LIFETIME=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# SocketIO Configuration
SOCKETIO_CORS_ALLOWED_ORIGINS=*
SOCKETIO_MAX_HTTP_BUFFER_SIZE=52428800
SOCKETIO_PING_TIMEOUT=300
SOCKETIO_PING_INTERVAL=25

# OCR Configuration
OCR_DPI=150
OCR_MAX_DIMENSION=1500
OCR_BATCH_SIZE=5
OCR_JPEG_QUALITY=85
TESSERACT_LANG=eng
TESSERACT_OEM=3
TESSERACT_PSM=6

# PDF Processing Configuration
PDF_MERGE_BATCH_SIZE=10
PYTHON_GC_THRESHOLD=5

# Text Processing Configuration
TEXT_CHUNK_SIZE=1000
TEXT_CHUNK_OVERLAP=200
VECTOR_BATCH_SIZE=100

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo-16k
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ChromaDB Configuration
CHROMA_DB_PATH=chroma_db

# Tesseract Paths (optional - auto-detected if not specified)
# TESSERACT_CMD_MACOS=/opt/homebrew/bin/tesseract
# TESSERACT_CMD_LINUX=/usr/bin/tesseract
# TESSERACT_CMD_WINDOWS=C:\Program Files\Tesseract-OCR\tesseract.exe