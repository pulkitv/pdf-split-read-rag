# Environment Variables for Newspaper Summary App

# OpenAI API Key (Required for AI summarization)
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration for Large PDF Processing
SECRET_KEY=your-secret-key-here-change-this

# File Upload Configuration - INCREASED for large PDFs
MAX_CONTENT_LENGTH=209715200  # 200MB in bytes
MAX_PROCESSING_SIZE_MB=200    # 200MB for processing
ALLOWED_EXTENSIONS=pdf
MAX_FILE_SIZE_MB=200

# Server Configuration
HOST=0.0.0.0
PORT=5000
FLASK_DEBUG=false
SERVER_NAME=localhost:5000
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

# Folder Configuration
UPLOAD_FOLDER=uploads
TEMP_FOLDER=temp
PROCESSED_FOLDER=processed
VOICEOVER_FOLDER=voiceovers

# Session Configuration
PERMANENT_SESSION_LIFETIME=7200  # 2 hours for large file processing
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# SocketIO Configuration for Large Files
SOCKETIO_CORS_ALLOWED_ORIGINS=*
SOCKETIO_MAX_HTTP_BUFFER_SIZE=209715200  # 200MB
SOCKETIO_PING_TIMEOUT=600                # 10 minutes for large files
SOCKETIO_PING_INTERVAL=30                # 30 seconds

# Performance Settings
SEND_FILE_MAX_AGE_DEFAULT=0

# Voiceover Configuration
VOICEOVER_FOLDER=voiceovers
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30

# Background Video Configuration
# Enable background video instead of static blue screen
BACKGROUND_VIDEO_ENABLED=true

# Background video folders (relative to project root)
# The system will randomly select a video from these folders for each generation
SHORTS_BACKGROUND_FOLDER=backgrounds/shorts
REGULAR_BACKGROUND_FOLDER=backgrounds/regular

# Background video fallback settings
# If background video is missing or fails, fall back to waveform
BACKGROUND_VIDEO_FALLBACK=waveform  # Options: waveform, static, solid_color

# FFmpeg Quality Optimization Settings
# Video Preset: ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow
# Trade-off: slower preset = better quality, longer encoding time
VIDEO_PRESET=slow

# CRF (Constant Rate Factor): 0-51, lower = better quality
# Recommended: 18 (visually lossless), 23 (high quality), 28 (acceptable)
VIDEO_CRF=18

# Audio Bitrate: Higher = better quality (e.g., 128k, 192k, 256k, 320k)
AUDIO_BITRATE=256k

# Audio Sample Rate: 44100 (CD quality) or 48000 (professional)
AUDIO_SAMPLE_RATE=48000

# H.264 Profile: baseline, main, high (high = best quality)
VIDEO_PROFILE=high

# H.264 Level: 3.0, 3.1, 4.0, 4.1, 4.2 (higher = more features)
VIDEO_LEVEL=4.2

# Video Tune: film, animation, grain, stillimage, fastdecode, zerolatency
# Use 'animation' for text/graphics, 'film' for natural video
VIDEO_TUNE=animation

