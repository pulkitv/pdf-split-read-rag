# Environment Variables for Newspaper Summary App

# OpenAI API Key (Required for AI summarization)
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration for Large PDF Processing
SECRET_KEY=your-secret-key-here-change-this

# File Upload Configuration - INCREASED for large PDFs
MAX_CONTENT_LENGTH=209715200  # 200MB in bytes
MAX_PROCESSING_SIZE_MB=200    # 200MB for processing
ALLOWED_EXTENSIONS=pdf
MAX_FILE_SIZE_MB=200

# Server Configuration
HOST=0.0.0.0
PORT=5000
FLASK_DEBUG=false
SERVER_NAME=localhost:5000
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

# Folder Configuration
UPLOAD_FOLDER=uploads
TEMP_FOLDER=temp
PROCESSED_FOLDER=processed
VOICEOVER_FOLDER=voiceovers

# Session Configuration
PERMANENT_SESSION_LIFETIME=7200  # 2 hours for large file processing
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# SocketIO Configuration for Large Files
SOCKETIO_CORS_ALLOWED_ORIGINS=*
SOCKETIO_MAX_HTTP_BUFFER_SIZE=209715200  # 200MB
SOCKETIO_PING_TIMEOUT=600                # 10 minutes for large files
SOCKETIO_PING_INTERVAL=30                # 30 seconds

# Performance Settings
SEND_FILE_MAX_AGE_DEFAULT=0